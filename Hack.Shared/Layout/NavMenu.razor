                </NavLink>
            </div>
            

        </nav>

    </div>

</div>

@code {

    private bool showDropdown = false;
    private string LastName = "Баженов";
    private string FirstName = "Владимир";
    private string MiddleName = "Дмитриевич";
    private string Position = "Менеджер";

    // Функция для переключения состояния окна (открытие/закрытие)
    private void ToggleProfileDropdown()
    {
        showDropdown = !showDropdown;
    }

    // Закрытие выпадающего окна при клике вне окна
    private void CloseDropdown(MouseEventArgs e)
    {
        showDropdown = false;
    }

    private async Task OnLogoutClicked()
    {
        await AuthService.Logout();
    }
}
